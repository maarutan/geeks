{
  "venvPath": "./.venv",
  "pythonVersion": "3.8",
  "include": ["src"],
  "exclude": ["node_modules", ".git"],
  "reportMissingImports": true,
  "reportGeneralTypeIssues": true,
  "pythonPath": "./.venv/bin/python",  // Путь к Python интерпретатору из venv
  "typeCheckingMode": "basic",
  "diagnosticMode": "workspace",
  "useLibraryCodeForTypes": true,
  "autoSearchPaths": true,
  "extraPaths": [
    "./.venv/lib/python3.8/site-packages"  // Добавьте путь к пакетам venv
  ]
}

